<html>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/style.css"/>
        <title>{{data.title}}</title>
    </head>
    
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-lg">
            <a class="navbar-brand me-5" href="/home">
                <img src="/public/assets/alfi.png" style="height:35px" alt="logo" />
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                <li class="nav-item home-link">
                    <a href="/home" class="nav-link" >Home</a>
                </li>
                <li class="nav-item">
                    <a href="/project" class="nav-link">Add Project</a>
                </li>
                </ul>
            </div>
            <div class="d-flex contact-me">
                <a href="/contact-me"> Contact Me </a>
            </div>
            </div>
        </nav>

        <div>
            <h1 style="margin: 30px; text-align:center;">{{data.title}}</h1>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <img class="image-fluid" src="/public/assets/uiux.jpg"/>
                    </div>
                    <div class="col">
                        <h4>Duration</h4>
                        <div class="icons">
                            <i class="fa-solid fa-calendar-days fa-xl"></i>
                            <label style="margin-left:10px;">18 Jul 2022 - 20 Aug 2022</label>
                        </div>
                        <div class="icons">
                            <i class="fa-regular fa-clock fa-xl"></i>
                            <label style="margin-left:10px;"> {{data.deadline}} </label>
                        </div>

                        <h4>Technologies</h4>
                        <div class="detail-techno">

                            <div class="icons">
                                
                                <i class="fa-brands fa-node-js fa-xl" title="node"></i>
                                <label style="margin-left:10px;">Node Js</label>
                            
                            </div>
                            <div class="icons">
                                <i class="fa-brands fa-react fa-xl" title="react"></i>
                                <label style="margin-left:10px;">React Js</label>
                                
                            </div>
                            <div class="icons">
                                <i class="fa-brands fa-php fa-xl" title="php"></i>
                                <label style="margin-left:10px;">PHP</label>
                                
                            </div>
                            <div class="icons">
                                <i class="fa-brands fa-laravel fa-xl" title="laravel"></i>
                                <label style="margin-left:10px;">Laravel</label>
                                
                            </div>
                        </div>
                    </div>

                <div class="container"
                style="margin-top: 30px;">
                    <P>
                       {{data.description}}
                    </P>
                </div>


                </div>

            </div>




        </div>
    </body>
</html>