<html>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/style.css"/>
        <title>{{data.title}}</title>
    </head>
    
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-lg">
            <a class="navbar-brand me-5" href="/home">
                <img src="/public/assets/alfi.png" style="height:35px" alt="logo" />
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                <li class="nav-item home-link">
                    <a href="/home" class="nav-link" >Home</a>
                </li>
                <li class="nav-item">
                    <a href="/project" class="nav-link">Add Project</a>
                </li>
                </ul>
            </div>
            <div class="d-flex contact-me">
                <a href="/contact-me"> Contact Me </a>
            </div>
            </div>
        </nav>
        <div>
            <h1 style="text-align: center;
    margin: 20px;">EDIT MY PROJECT</h1>
        <div class="proj-form">
            
            <form class="form-container" action="/edit-project" method="POST">
                    <div>
                        <label for="input-proj-title">Project Name</label>
                        <input type="text" id="input-title" name="title" class="form-control" value="{{data.title}}"/>
                    </div>
                    <div class="deadline">
                        
                            <div class="date-start">
                                <label for="input-date-start">Start Date</label>
                                <input type="date" id="input-date-start" name="dateStart" class="form-control" value="{{data.dateStart}}"/>
                            </div>
                        
                            <div class="date-end">
                                <label for="input-date-end">End Date</label>
                                <input type="date" id="input-date-end" name="dateEnd" class="form-control" value="{{data.dateEnd}}"/>
                            </div>
                    
                    </div>
                    
                    <div>
                        <label for="input-desc">Description</label>
                        <textarea id="input-desc" class="form-control" name="description">{{data.description}}</textarea>
                    </div>
                    
                    <label>Technologies</label>

                    <div class="techno-container">                       
                        <div>
                             <label><input type="checkbox" id="input-node-js" name="techno" value="node-js"/> Node Js</label>
                        </div>
                        <div>
                            <label><input type="checkbox" id="input-php" name="techno" value="php"/> PHP</label>
                        </div>
        
                        <div>
                            <label><input type="checkbox" id="input-react-js" name="techno" value="react"/> React Js</label>
                        </div>
                            
                        <div>
                            <label><input type="checkbox" id="input-laravel" name="techno" value="laravel"/> Laravel</label>
                        </div>
                    </div>

                    <div >
                        <label>Upload Image</label>
                        <div class="input-group">
                            <input type="file" name="upImage" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                          </div>
                        
                    </div>
                    <div class="button-group">
                        <button type="submit" class="btn">Submit</button>
                    </div>

            </form>

            </div>
        </div>

    </body>
</html>